<%- include("./template/cabecera", {tituloWeb: 'Usuarios'}) %>

<div class="container">
  <h1>Detalle usuario</h1>

  <% if (error) { %> <%= mensaje %>
  <a href="/usuarios" class="btn btn-dark btn-block my-2"> Volver </a>
  <% } %> <% if (!error) { %>

  <form id="formularioEditar" data-id="<%= usuario.id %>">
    <input
      type="text"
      name="nombre"
      class="form-control my-2"
      value="<%= usuario.nombre %>"
      id="nombreInput"
    />

    <input
      type="email"
      name="correo"
      class="form-control my-2"
      value="<%= usuario.correo %>"
      id="correoInput"
    />

    <input
      type="text"
      name="rol"
      class="form-control my-2"
      value="<%= usuario.rol %>"
      id="rolInput"
    />

    <button class="btn btn-warning btn-block" type="submit">Editar</button>
  </form>

  <hr />

  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">Correo</th>
        <th scope="col">Rol</th>
        <th scope="col">Acci√≥n</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"><%= usuario.id %></th>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.correo %></td>
        <td><%= usuario.rol %></td>
        <td>
          <button
            class="btn btn-danger btn-sm"
            id="btnEliminar"
            data-id="<%= usuario.id %>"
          >
            Eliminar
          </button>
        </td>
      </tr>
      <a href="/usuarios" class="btn btn-dark btn-block my-2">
        Volver a usuarios
      </a>
    </tbody>
  </table>
  <% } %>
</div>

<%- include("./template/footer") %>

<script>
  //Evento eliminar

  const btnEliminar = document.querySelector("#btnEliminar");
  btnEliminar.addEventListener("click", async () => {
    const id = btnEliminar.dataset.id;
    console.log("id", id);

    try {
      // https://developer.mozilla.org/es/docs/Web/API/HTMLElement/dataset
      const data = await fetch(`/usuarios/${id}`, {
        method: "delete",
      });
      const res = await data.json();

      if (res.estado) {
        window.location.href = "/usuarios";
      } else {
        console.log(res);
      }
    } catch (error) {
      console.log(error);
    }
  });

  //Evento Editar

  const formularioEditar = document.querySelector("#formularioEditar");

  formularioEditar.addEventListener("submit", async (e) => {
    e.preventDefault();
    console.log("submit");

    //2 formas de capturar datos de un input:

    const nombre = formularioEditar.elements["nombre"].value;
    const correo = document.querySelector("#correoInput").value;
    const rol = document.querySelector("#rolInput").value;
    const id = formularioEditar.dataset.id;

    try {
      const data = await fetch(`/usuarios/${id}`, {
        method: "put",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ nombre: nombre, correo: correo, rol: rol }),
      });

      const res = await data.json();

      if (res.estado) {
        window.location.href = "/usuarios";
      } else {
        console.log(res);
      }
    } catch (error) {
      console.log(error);
    }
  });
</script>
